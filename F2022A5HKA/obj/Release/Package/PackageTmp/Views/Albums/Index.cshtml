@model IEnumerable<F2022A5HKA.Models.AlbumBaseViewModel>

@{
    ViewBag.Title = "Album List";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AlbumId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Coordinator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.UrlAlbum)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.AlbumId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Coordinator)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Genre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ReleaseDate)
    </td>
    <td>
        <img src="@Html.DisplayFor(modelItem => item.UrlAlbum)" alt="@item.Name" width="150" />
    </td>
    
    <td>
       
        @Html.ActionLink("Details", "Details", new { id = item.AlbumId })
        
    </td>
</tr>
}

</table>
